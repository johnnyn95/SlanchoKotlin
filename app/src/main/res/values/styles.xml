<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    // Inheriting styles

    <style name="SmallFontFamily">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="MediumFontFamily">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="LargeFontFamily">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>


    // Views

    <style name="TextView" parent="MediumFontFamily">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="EditText" parent="MediumFontFamily">
        <item name="android:layout_margin">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Button" parent="SmallFontFamily">
        <item name="android:layout_margin">@dimen/medium_padding</item>
    </style>

    <style name="TextViewTitle" parent="TextView">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="SettingsToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:titleTextColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:titleTextColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Drawer" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/white</item>
        <item name="android:itemBackground">@drawable/drawer_selected_item</item>
    </style>

    <style name="NavbarHeader" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>
</resources>
