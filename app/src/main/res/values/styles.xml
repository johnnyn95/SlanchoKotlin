<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    // Text Padding
    <style name="SmallTextPadding">
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="MediumTextPadding">
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="LargeTextPadding">
        <item name="android:padding">@dimen/large_padding</item>
    </style>

</resources>
